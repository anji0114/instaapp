.container
  %ul
    - @article.errors.full_messages.each do |message|
      %li= message
  = form_with(model: @article, url: articles_path, method: 'post', local: true) do |f|
    .post-header
      %p= link_to 'Cance', :back, class:'cancel-btn'
      %p Status
      = f.submit 'Post', class: 'post-btn'
    .post_user
      .post_user_avatar= image_tag current_user.avatar_image
      .post_user_name
        %p= current_user.account_name
    %div
      = f.file_field :pictures, multiple: true, class: 'album-btn'
    %div
      = f.text_field :content, class: 'text', placeholder: 'Whatâ€™s on your mind ?'