.container
  .profile
    .account_name= @account_name
    .profile_image.old-avatar
      = image_tag current_user.avatar_image
    .profile_image.new-avatar.hidden
      = image_tag '', id: 'new-avatar'
    .profile_info
      .profile_info_posts
        %P 10
        %P Posts
      .profile_info_followers
        %p 10
        %p Followers
      .profile_info_following
        %p 10
        %p Following
    - current_user.articles.each do |article|
      .article{data: {article_id: article.id}}
        .user
          .user_avatar= image_tag article.user.avatar_image
          .user_info
            .user_info_name
              %p= article.user.account_name
            .article_created
              %p= date_format(article.created_at)
          - if user_signed_in? && current_user.has_written?(article)
            .dropdown
              = image_tag 'actions.svg', class: 'dropbtn'
              .dropdown-content.mini
                = link_to '削除する', article_path(article), data: {method: 'delete', confirm: '本当に削除してもいいですか'}
        - article.pictures.each do |picture|
          .pictures
            = image_tag picture
        .article_active
          = image_tag 'heart-active.png'
          = image_tag 'comment.png'
          = image_tag 'share.png'
        .article_content
          %p= article.content
          
  = form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f|
    .hidden
      = f.file_field :avatar, class: 'avatar-post'
      = f.submit '保存', class: 'avatar-btn'
= javascript_pack_tag 'profile'