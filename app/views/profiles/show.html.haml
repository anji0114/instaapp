.container
  .profile
    .account_name= @account_name
    .profile_image
      = link_to edit_profile_path do
        = image_tag current_user.avatar_image
    .profile_info
      .profile_info_posts
        %P 10
        %P Posts
      .profile_info_followers
        %p 10
        %p Followers
      .profile_info_following
        %p 10
        %p Following
    .profile_article
      %P article