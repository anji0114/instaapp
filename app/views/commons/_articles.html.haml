- articles.each do |article|
  .article{data: {article_id: article.id}}
    .user
      .user_avatar= image_tag article.user.avatar_image
      .user_info
        .user_info_name
          %p= article.user.account_name
        .article_created
          %p= date_format(article.created_at)
      - if user_signed_in? && current_user.has_written?(article)
        .dropdown
          = image_tag 'actions.svg', class: 'dropbtn'
          .dropdown-content.mini
            = link_to '削除する', article_path(article), data: {method: 'delete', confirm: '本当に削除してもいいですか'}
    - article.pictures.each do |picture|
      .pictures
        = image_tag picture
    .article_active
      -if user_signed_in?
        -# - if current_user.has_liked?(article)
          = link_to article_like_path(article.id), data: {method: 'delete'} do
        .active-heart.hidden= image_tag 'heart-active.png'
        -# - else 
          = link_to article_like_path(article.id), data: {method: 'post'} do
        .inactive-heart.hidden= image_tag 'heart.png'
        = image_tag 'comment.png'
        = link_to "http://twitter.com/share?url=https://localhost:3000/articles/#{article.id}&text=投稿をシェア"  do
          = image_tag 'share.png'
    .article_content
      %p= article.content
= javascript_pack_tag 'article'
